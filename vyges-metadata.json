    "FIR_TAPS": {
      "type": "int",
      "default": 64,
      "range": [4, 256],
      "description": "Number of FIR filter taps for passband compensation"
    },
    "HALFBAND_TAPS": {
      "type": "int",
      "default": 33,
      "range": [5, 128],
      "description": "Number of halfband filter taps (must be odd)"
